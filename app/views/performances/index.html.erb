<h1>Listing performances</h1>

<table class="table table-striped table-hover table-bordered " >
  <thead>
    <tr>
      <th>Employee</th>
      <th>Number</th>
      <th>Reason</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @performances.each do |performance| %>
      <tr>
        <td><%= performance.employee.name %></td>
        <td><%= performance.number %></td>
        <td><%= performance.reason %></td>
        <td><%= link_to 'Show', performance %></td>
        <td><%= link_to 'Edit', edit_performance_path(performance) %></td>
        <td><%= link_to 'Destroy', performance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

