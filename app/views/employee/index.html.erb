<% provide(:title, '人事管理') %>
<h1>员工列表</h1>

<table class="table table-striped table-hover table-bordered " >
<thead>
	<tr>
		<td>Name</td>
		<td>Gender</td>
		<td>ID</td>
		<td>Edit</td>
		<td>Fire!</td>
	</tr>
</thead>
<% @employee.each do |emp| %>
	<tr>
		<td><%= emp.name %></td>
		<td><%= emp.gender %></td>
		<td><%= emp.passport %></td>
		<td><button class="btn btn-mini" ><i class="icon icon-edit" ></i> Edit</button></td>
		<td><button class="btn btn-mini btn-danger"><i class="icon icon-white icon-trash" ></i> Fire!</button></td>
	</tr>
<% end %>
</table>
